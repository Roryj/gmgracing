 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
    $_fancybox = '';
?>

<p class="product-image">
    <?php
        $_img = '<img class="img-responsive" src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(512).'" alt="'.$this->htmlEscape($this->getImageLabel()).'" title="'.$this->htmlEscape($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
</p>

<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views">
  <ul class="row">
  <?php foreach ($this->getGalleryImages() as $_image): ?>
      <li class="col-sm-3">
          <img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(120); ?>" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" onclick="changemain('<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(395); ?>', '<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'small_image', $_image->getFile()) ?>', '<?php echo $this->htmlEscape($_image->getLabel()) ?>');" class="img-responsive" title="<?php echo $this->htmlEscape($_image->getLabel()) ?>" />
      </li>
  <?php endforeach; ?>
  </ul>
</div>
<?php endif; ?>
