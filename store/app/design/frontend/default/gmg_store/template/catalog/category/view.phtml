<?php
/**
 * Category view template
 *
 * @see Mage_Catalog_Block_Category_View
 */

	$_helper    = $this->helper('catalog/output');
  $_category = $this->getCurrentCategory();
  if ($_category == null)
    	$_category  = Mage::getModel('catalog/category')->load($this->getCategoryId());

  $_child_categories = $_category->getChildrenCategories();
?>
<div class="row">
	<div id="product-filter">

		<form class="form-inline clearfix" role="form">
			<h4>Please Choose Your Vehicle:</h4>
		  <div class="form-group">
		    <label>Year:</label>
		    <select ng-model="filter.year" ng-options="y.id as y.label for y in yearOptions" ng-disabled="yearOptions.length==0"></select>
		  </div>
		  <div class="form-group">
		    <label>Make:</label>
		    <select ng-model="filter.make" ng-options="m.id as m.label for m in makeOptions" ng-disabled="makeOptions.length==0"></select>
		  </div>
		  <div class="form-group">
		    <label>Model:</label>
		    <select ng-model="filter.model" ng-options="d.id as d.label for d in modelOptions" ng-disabled="modelOptions.length==0"></select>
		  </div>
		  <div class="form-group">
		  	<div class="loading-animation">
		  		<button type="submit" class="btn btn-white" ng-click="go()">GO</button>
		  		<span class="spin">&nbsp;</span>
		  	</div>
			</div>
		</form>

		<div class="details" ng-hide="categories.length==0">
			<div class="row">
				<div class="col-sm-4">
					<div class="border-right">
					<h5>SELECTED CAR:</h5>
						<div class="selected-car-model">{{filterYear.label}} {{filterMake.label}} {{filterModel.label}}</div>
						<div class="selected-car-img" ng-show="filter.model.img_url">
							<img ng-src="{{filter.model.img_url}}" class="img-responsive"/>
						</div>
					</div>
				</div>
				<div class="col-sm-4">
						<h5>CHOOSE YOUR CATEGORY:</h5>
						<div class="row">
							<div class="col-sm-6" ng-repeat="category in categories"><a href="{{category.url}}"><span class="glyphicon glyphicon-play"></span> {{category.label}}</a></div>
						</div>
				</div>
				<div class="col-sm-4">
					<div class="border-left">
						<h5>IN YOUR SHOPPING CART:</h5>
					</div>
				</div>
			</div>
		</div>

	</div>

	<div id="messages_product_view"><?php $messages = $this->getMessagesBlock()->getGroupedHtml(); echo $messages; ?></div>

	<h1 class="page-title"><?php echo strtoupper($_category->getName()) ?></h1>

	<?php if(count($_child_categories)>0): ?>
		<?php 
				foreach ($_child_categories as $_category): 
								$_productCollection = $_category->getProductCollection();
					if(count($_productCollection) > 0):
				?>
				<div class="category">
					<h2 class="category-name stripe">
						<div class="line"></div>
						<span class="text"><?php echo strtoupper($_category->getName()) ?>&nbsp;</span>
						&nbsp;
					</h2>

					<?php
						$layout = Mage::getSingleton('core/layout');
						$block = $layout->createBlock('catalog/product_list');
						$block->setCategoryId($_category->getId());
						$block->setTemplate('catalog/product/list.phtml'); 
						echo $block->renderView();
					?>
					

				</div>
		<?php 
					endif;
				endforeach;
		?>
	<?php else: ?>
		<div class="category">
			<?php
				$layout = Mage::getSingleton('core/layout');
				$block = $layout->createBlock('catalog/product_list');
				$block->setCategoryId($_category->getId());
				$block->setTemplate('catalog/product/list.phtml'); 
				echo $block->renderView();
			?>
		</div>
	<?php endif;?>
</div>
