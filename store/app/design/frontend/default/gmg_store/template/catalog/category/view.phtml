<?php
/**
 * Category view template
 *
 * @see Mage_Catalog_Block_Category_View
 */

	$_helper    = $this->helper('catalog/output');
  $_category = $this->getCurrentCategory();
  if ($_category == null)
    	$_category  = Mage::getModel('catalog/category')->load($this->getCategoryId());

  $_child_categories = $_category->getChildrenCategories();
?>
<div class="row">
	<div id="messages_product_view"><?php $messages = $this->getMessagesBlock()->getGroupedHtml(); echo $messages; ?></div>

	<h1 class="page-title"><?php echo strtoupper($_category->getName()) ?></h1>

	<?php if(count($_child_categories)>0): ?>
		<?php 
				foreach ($_child_categories as $_category): 
								$_productCollection = $_category->getProductCollection();
					if(count($_productCollection) > 0):
				?>
				<div class="category">
					<h2 class="category-name stripe">
						<div class="line"></div>
						<span class="text"><?php echo strtoupper($_category->getName()) ?>&nbsp;</span>
						&nbsp;
					</h2>

					<?php
						$layout = Mage::getSingleton('core/layout');
						$block = $layout->createBlock('catalog/product_list');
						$block->setCategoryId($_category->getId());
						$block->setTemplate('catalog/product/list.phtml'); 
						echo $block->renderView();
					?>
					

				</div>
		<?php 
					endif;
				endforeach;
		?>
	<?php else: ?>
		<div class="category">
			<?php
				$layout = Mage::getSingleton('core/layout');
				$block = $layout->createBlock('catalog/product_list');
				$block->setCategoryId($_category->getId());
				$block->setTemplate('catalog/product/list.phtml'); 
				echo $block->renderView();
			?>
		</div>
	<?php endif;?>
</div>
